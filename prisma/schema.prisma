datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  role      String   @default("user")
  shops     Shop[]   @relation("AdminShops")
}

model Shop {
  id          String   @id @default(cuid())
  name        String
  description String
  address     String
  owner       String
  phone       String
  email       String   @unique
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  adminId     Int
  admin       User     @relation(fields: [adminId], references: [id], name: "AdminShops")

  services    ShopService[]

  @@map("shops")
}

model ShopService {
  id      String @id @default(cuid())
  name    String
  shopId  String
  shop    Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)
  
  @@map("shop_services")
}