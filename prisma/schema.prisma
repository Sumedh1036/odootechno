datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  role      String   @default("user")

  workHistory MechanicWorkHistory[]
}

model Shop {
  id          String   @id @default(cuid())
  name        String
  description String
  address     String
  owner       String
  phone       String
  email       String   @unique
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  adminId     Int
  

  services    ShopService[]
  mechanics   MechanicWorkHistory[]

  @@map("shops")
}

model ShopService {
  id      String @id @default(cuid())
  name    String
  shopId  String
  shop    Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)
  
  @@map("shop_services")
}

model ServiceRequest {
  id          String   @id @default(cuid())
  name        String
  description String?
  serviceType String
  date        DateTime
  image       String?  // Store image URL or path
  latitude    Float?
  longitude   Float?
  detailedIssue String @db.Text
  status      String   @default("OPEN")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("service_requests")
}

model MechanicWorkHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  shopId    String
  startDate DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  shop Shop @relation(fields: [shopId], references: [id])

  @@map("mechanic_work_history")
}
